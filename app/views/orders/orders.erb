<!--%binding.pry%-->
<h2>Welcome, <%= current_user.username %>!</h2>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<br></br>
<table style="width:75%">
  <tr>
  <th>Order ID</th>
  <th>Show Order</th>
  <th>Input Name</th>
  <th>User_ID</th>
  <th>Order's Task</th>
  <th>Order's Site</th>
  <th>Order's Status</th>
  <th>Order's Updated Time</th>
  </tr>
  <% @orders.each do |order| %>
  <%# binding.pry %>
    <tr>
    <td><%=  order.id %></td>
    <td><a href="/orders/<%= order.id %>/show">"edit"</a></td>
    <td><%=  order.counter %></td>
    <td><%=  order.user_id %></td>
    <td><%=  order.task.task %></td>
    <td><%=  order.site.site %></td>
    <td><%=  order.status.status %></td>
    <%# binding.pry unless order.updated_date%>
    <td><%=  order.updated_date.strftime("%m/%d/%Y at %I:%M:%S %p") if order.updated_date%></td>
   </tr> 
  <% end %>
</table>
<br></br>
<p><a href="/orders/new">Create New Work Order</a></p>
<p><a href="/logout">Log Out</a></p>

